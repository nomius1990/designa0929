<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="customer-forgotPassword" template="Magento_Customer::html/customer-forgotPassword.phtml" before="-">
                <block class="Magento\Framework\View\Element\Template" name="cutomer_logo" template="Magento_Customer::logo.phtml" />
            </block>
        </referenceContainer>
        <move element="forgotPassword" destination="customer-forgotPassword" />
        <move element="page.messages" destination="main" before="-" />
    </body>
</page>
